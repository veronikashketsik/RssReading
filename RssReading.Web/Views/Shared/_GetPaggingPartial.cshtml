@model RssReading.Web.Models.FilterRssItemsViewModel

<nav aria-label="rssnews">
	<ul class="pagination">
		@for (int i = 1; i <= Model.TotalPageCount; i++)
		{
			if (i != Model.PageNumber)
			{
				<li class="pagination-page page-item"><a class="page-link" href="#">@i</a></li>
			}
			else
			{
				<li class="pagination-page page-item active"><a class="page-link" href="#">@i</a></li>
			}
		}
	</ul>
</nav>